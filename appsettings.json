{
    "Logging": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
      "DefaultConnection": "Host=localhost;Database=law-reference-db;Username=postgres;Password=your-password"
    },
    "Authentication": {
      "Authority": "https://your-identity-provider.com",
      "Audience": "law-reference-api"
    },
    "Storage": {
      "ConnectionString": "DefaultEndpointsProtocol=https;AccountName=your-storage-account;AccountKey=your-account-key;EndpointSuffix=core.windows.net"
    },
    "OpenAI": {
      "ApiKey": "your-openai-api-key",
      "EmbeddingModel": "text-embedding-3-large"
    },
    "Qdrant": {
      "Host": "localhost",
      "Port": 6334,
      "UseTls": false,
      "CollectionName": "law-documents",
      "VectorDimension": 1536
    },
    "OpenSearch": {
      "Nodes": "http://localhost:9200",
      "Username": "admin",
      "Password": "admin",
      "IndexName": "law-documents"
    },
    "Indexing": {
      "ChunkSize": 512,
      "ChunkOverlap": 128,
      "MaxTokensPerChunk": 1024
    },
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://your-frontend-app.com"
    ]
  }